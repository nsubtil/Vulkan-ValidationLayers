      "deps" : [
        {
          "var_name" : "VULKAN_HEADERS_INSTALL_DIR",
          "repo_name" : "Vulkan-Headers"
        },
        {
          "var_name" : "VULKAN_LOADER_INSTALL_DIR",
          "repo_name" : "Vulkan-Loader"
        },
        {
          "var_name" : "GLSLANG_INSTALL_DIR",
          "repo_name" : "glslang"
        },
        {
          "var_name" : "MOLTENVK_REPO_ROOT",
          "repo_name" : "MoltenVK"
        }
      ],
      "ci_only" : [
        "TRAVIS"
      ]
    }
