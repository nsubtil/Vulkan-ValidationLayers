      ],
      "build_step" : "custom",
      "build_platforms" : [
        "darwin"
      ]
    },
    {
      "name" : "VulkanTools",
      "url" : "https://github.com/LunarG/VulkanTools.git",
      "sub_dir" : "VulkanTools",
      "build_dir" : "VulkanTools/build",
